<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrossCompAffiliate.OptiHealthPledgeActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">

            <TextView
                android:id="@+id/userNAME"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_marginEnd="15dp"
                android:text="My OptiHealth Pledge"
                android:gravity="center"
                android:textColor="@color/actionbar_text_colour"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_layout"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appbar_layout"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="As a CrossComp Affiliate with the OptiHealth\n Network, you are expected to make a personal\n commitment towards developing and\n maintaining a healthy lifestyle.\n\n Please mark all the items below with which\n you agree and intend to apply. Your responses\n are confidential and will not disqualify you from\n becoming a CrossComp Affiliate."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/one"
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="As a ____________:"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/three"
                    android:layout_below="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Parent"
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/four"
                    android:layout_below="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Teacher"
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/five"
                    android:layout_below="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Coach"
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/six"
                    android:layout_below="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Pastor"
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/seven"
                    android:layout_below="@+id/six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Employer"
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/eight"
                    android:layout_below="@+id/seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Neighbor"
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/nine"
                    android:layout_below="@+id/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Friend"
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ten"
                    android:layout_below="@+id/nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Health Professional"
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/eleven"
                    android:layout_below="@+id/ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Citizen"
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/eleven"
                    android:id="@+id/t12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I understand that: "
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t13"
                    android:layout_below="@+id/t12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Our society is increasingly burdened by chronic diseases, most of which can be prevented or minimized through a healthy lifestyle."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t14"
                    android:layout_below="@+id/t13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="My role within this society of rampant unhealthy behaviors is to help restore, maintain, and enhance the health and well being of others by offering hope, guidance, and support."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t15"
                    android:layout_below="@+id/t14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="My lifestyle reflects my values and priorities, establishes my credibility, and affects the quality and effectiveness of the care that I provide."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t16"
                    android:layout_below="@+id/t15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Therefore, my purpose calls me to live a healthy lifestyle that is consistent with the advice that I give."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/t16"
                    android:id="@+id/t17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thus, for the sake of my health, as well as the health of my family, friends, and community, I promise to work towards the following optimal lifestyle ideals:"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t18"
                    android:layout_below="@+id/t17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will engage in regular physical activity."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t19"
                    android:layout_below="@+id/t18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will get an adequate amount of restful sleep each night."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t20"
                    android:layout_below="@+id/t19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will consume a nutritious, whole-food, plant-based diet."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t21"
                    android:layout_below="@+id/t20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will achieve and maintain a healthy weight."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t22"
                    android:layout_below="@+id/t21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will refrain from the use of harmful substances."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t23"
                    android:layout_below="@+id/t22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will spend time outdoors enjoying recreational activities."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t24"
                    android:layout_below="@+id/t23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will listen attentively and express my thoughts appropriately."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t25"
                    android:layout_below="@+id/t24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will develop my mental skills and maintain emotional balance"
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t26"
                    android:layout_below="@+id/t25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will identify my negative feelings and accept life’s challenges."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t27"
                    android:layout_below="@+id/t26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will diminish my personal stressors and resolve conflicts."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t28"
                    android:layout_below="@+id/t27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will trust God to lead me through this personal, transformation process."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t29"
                    android:layout_below="@+id/t28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will acknowledge my progress and celebrate my victories."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/t30"
                    android:layout_below="@+id/t29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I will encourage my family and friends to develop healthier lifestyles, as well."
                    android:buttonTint="@color/green"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="top"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/t31"
                android:layout_below="@+id/t30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="I will work as a partner with others in these efforts."
                android:buttonTint="@color/green"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="top"
                />
                <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/t32"
                android:layout_below="@+id/t31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="I will also do what I can to promote healthy lifestyles in my community."
                android:buttonTint="@color/green"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="top"
                />
                <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/t33"
                android:layout_below="@+id/t32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="I will respect and try to understand the health beliefs of others."
                android:buttonTint="@color/green"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="top"
                />
                <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/t34"
                android:layout_below="@+id/t33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="I will guard myself from potential lifestyle prejudices against others, considering the complex dynamics of unhealthy behaviors."
                android:buttonTint="@color/green"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="top"
                />

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/t34"
                    android:id="@+id/t35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recognizing that Therapeutic Lifestyle Change takes time and effort, I make this pledge freely upon my honor and for the benefit of everyone that I may influence."
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/t35"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/id123">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="3dp">
                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/firstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext"
                            android:hint="First Name"
                            android:paddingStart="30dp"
                            android:inputType="textCapSentences"
                            android:paddingTop="12dp"
                            android:textColorHint="@color/white"
                            android:textSize="14sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="3dp">
                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/lastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext"
                            android:hint="Last Name"
                            android:paddingStart="30dp"
                            android:inputType="textCapSentences"
                            android:paddingTop="12dp"
                            android:textColorHint="@color/white"
                            android:textSize="14sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="3dp">
                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext"
                            android:hint="Date"
                            android:paddingStart="30dp"
                            android:inputType="textCapSentences"
                            android:paddingTop="12dp"
                            android:textColorHint="@color/white"
                            android:textSize="14sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_below="@+id/id123"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:id="@+id/MoveToScore"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/res"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:onClick="MoveToAffiliateDashboard"
                    android:layout_marginBottom="@dimen/_20sdp"
                    />

            </RelativeLayout>
        </ScrollView>






        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_43sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            fab:menu_animationDelayPerItem="50"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_buttonSpacing="0dp"
            fab:menu_colorNormal="@color/white"
            fab:menu_colorPressed="@color/white"
            fab:menu_colorRipple="#99FFFFFF"
            fab:menu_fab_size="normal"
            fab:menu_icon="@drawable/crosscompicon2"
            fab:menu_labels_colorNormal="#333333"
            fab:menu_labels_colorPressed="#444444"
            fab:menu_labels_colorRipple="#66FFFFFF"
            fab:menu_labels_cornerRadius="3dp"
            fab:menu_labels_ellipsize="none"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_margin="0dp"
            fab:menu_labels_maxLines="-1"
            fab:menu_labels_padding="8dp"
            fab:menu_labels_paddingBottom="4dp"
            fab:menu_labels_paddingLeft="8dp"
            fab:menu_labels_paddingRight="8dp"
            fab:menu_labels_paddingTop="2dp"
            fab:menu_labels_position="left"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_showShadow="true"
            fab:menu_labels_singleLine="false"
            fab:menu_labels_style="@style/LabelStyle"
            fab:menu_labels_textColor="#FFFFFF"
            fab:menu_labels_textSize="14sp"
            fab:menu_openDirection="up"
            fab:menu_shadowColor="#66000000"
            fab:menu_shadowRadius="4dp"
            fab:menu_shadowXOffset="1dp"
            fab:menu_shadowYOffset="3dp"
            fab:menu_showShadow="true"
            fab:menu_fab_label="Scores"
            >


        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>




</RelativeLayout>