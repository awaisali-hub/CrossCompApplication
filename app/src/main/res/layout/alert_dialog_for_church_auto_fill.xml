<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">




        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusTopEnd="@dimen/_18sdp"
            app:boxCornerRadiusBottomStart="@dimen/_18sdp"
            app:boxCornerRadiusTopStart="@dimen/_18sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
            app:endIconMode="clear_text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="3dp">

            <AutoCompleteTextView
                android:id="@+id/My_Faith_Team_team_church"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="My Faith Team"
                android:paddingStart="30dp"
                android:inputType="textCapSentences"
                android:padding="15dp"
                android:textColorHint="@color/white"
                android:textSize="14sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusTopEnd="@dimen/_18sdp"
            app:boxCornerRadiusBottomStart="@dimen/_18sdp"
            app:boxCornerRadiusTopStart="@dimen/_18sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
            app:endIconMode="clear_text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="3dp">
            <AutoCompleteTextView
                android:id="@+id/MyDivisionTeam_church"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="My Division Team"
                android:paddingStart="30dp"
                android:inputType="textCapSentences"
                android:padding="15dp"
                android:textColorHint="@color/white"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusTopEnd="@dimen/_18sdp"
            app:boxCornerRadiusBottomStart="@dimen/_18sdp"
            app:boxCornerRadiusTopStart="@dimen/_18sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
            app:endIconMode="clear_text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="3dp">
            <AutoCompleteTextView
                android:id="@+id/MyUnionTeam_church"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="My Union Team"
                android:paddingStart="30dp"
                android:inputType="textCapSentences"
                android:padding="15dp"
                android:textColorHint="@color/white"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusTopEnd="@dimen/_18sdp"
            app:boxCornerRadiusBottomStart="@dimen/_18sdp"
            app:boxCornerRadiusTopStart="@dimen/_18sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
            app:endIconMode="clear_text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="3dp">
            <AutoCompleteTextView
                android:id="@+id/MyConferenceTeam_church"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="My Conference Team"
                android:paddingStart="30dp"
                android:inputType="textCapSentences"
                android:padding="15dp"
                android:textColorHint="@color/white"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveTeam"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SAVE"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:background="@drawable/res"
        />
</LinearLayout>