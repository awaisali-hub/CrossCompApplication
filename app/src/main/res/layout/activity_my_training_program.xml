<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trainings.MyTrainingProgramActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">

            <TextView
                android:id="@+id/userNAME"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_marginEnd="15dp"
                android:text="My Training Program"
                android:gravity="center"
                android:textColor="@color/actionbar_text_colour"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_layout"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weekCount"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Week #1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Do the exercises listed below"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1 time per day:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Walk/Jog 600 meters"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/_7sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Do 45 squats"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Do 30 leg-raises"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Do 10 push-ups"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Let me know if you did them:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            />


        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="3"
            android:layout_marginTop="@dimen/_5sdp">
            <View
                android:layout_height="1dip"
                android:background="@color/black" />
            <TableRow>
                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_column="1"
                    android:text="Day"
                    android:padding="3dip"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:text="Yes"
                    android:padding="3dip"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:text="No"
                    android:padding="3dip"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </TableRow>

            <View
                android:layout_height="1dip"
                android:background="@color/black" />
            <TableRow>
                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_column="1"
                    android:text="Sunday"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:text="X"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
            </TableRow>


            <View
                android:layout_height="1dip"
                android:background="@color/black" />

            <TableRow>
                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_column="1"
                    android:text="Monday"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:text="X"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
            </TableRow>
            <View
                android:layout_height="1dip"
                android:background="@color/black" />

            <TableRow>
                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_column="1"
                    android:text="Tuesday"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:text="X"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
            </TableRow>
            <View
                android:layout_height="1dip"
                android:background="@color/black" />

            <TableRow>
                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_column="1"
                    android:text="Wednesday"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:text="X"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
            </TableRow>

            <View
                android:layout_height="1dip"
                android:background="@color/black" />
            <TableRow>
                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_column="1"
                    android:text="Thursday"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:text="X"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
            </TableRow>

            <View
                android:layout_height="1dip"
                android:background="@color/black" />
            <TableRow>
                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_column="1"
                    android:text="Friday"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:text="X"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
            </TableRow>

            <View
                android:layout_height="1dip"
                android:background="@color/black" />

            <TableRow>
                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_column="1"
                    android:text="Saturday"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:text="X"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_column="1"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="@color/black"/>
            </TableRow>
            <View
                android:layout_height="1dip"
                android:background="@color/black" />
        </TableLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="@dimen/_25sdp"
            android:id="@+id/MoveToScore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/res"
            android:text="My CrossComp Coach"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:onClick="MoveToCoach"
            />


    </LinearLayout>




</RelativeLayout>