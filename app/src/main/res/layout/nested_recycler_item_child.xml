<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:id="@+id/tv_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingStart="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:text="Child Item"/>

    <ImageView
        android:paddingEnd="@dimen/_3sdp"
        android:id="@+id/iv_expand_collapse_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
       android:layout_centerVertical="true"
        android:src="@drawable/ic__more"
        android:visibility="gone"/>

    <ImageView
        android:elevation="@dimen/_11sdp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_23sdp"
        android:id="@+id/msg_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/message_icon_img"/>
</RelativeLayout>