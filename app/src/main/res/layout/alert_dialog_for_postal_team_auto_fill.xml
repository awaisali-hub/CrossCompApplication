<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">




        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            app:boxCornerRadiusTopEnd="@dimen/_18sdp"
            app:boxCornerRadiusBottomStart="@dimen/_18sdp"
            app:boxCornerRadiusTopStart="@dimen/_18sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
            app:endIconMode="clear_text"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="3dp">

            <AutoCompleteTextView
                android:id="@+id/postal_code_for_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Postal Code"
                android:paddingStart="30dp"
                android:inputType="textCapSentences"
                android:padding="15dp"
                android:textColorHint="@color/white"
                android:textSize="14sp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusTopEnd="@dimen/_18sdp"
            app:boxCornerRadiusBottomStart="@dimen/_18sdp"
            app:boxCornerRadiusTopStart="@dimen/_18sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
            app:endIconMode="clear_text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/city_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="City"
                android:paddingStart="30dp"
                android:inputType="textCapSentences"
                android:paddingTop="10dp"
                android:textColorHint="@color/white"
                android:textSize="14sp">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusTopEnd="@dimen/_18sdp"
            app:boxCornerRadiusBottomStart="@dimen/_18sdp"
            app:boxCornerRadiusTopStart="@dimen/_18sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
            app:endIconMode="clear_text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/county_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="County"
                android:paddingStart="30dp"
                android:inputType="textCapSentences"
                android:paddingTop="10dp"
                android:textColorHint="@color/white"
                android:textSize="14sp">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusTopEnd="@dimen/_18sdp"
            app:boxCornerRadiusBottomStart="@dimen/_18sdp"
            app:boxCornerRadiusTopStart="@dimen/_18sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
            app:endIconMode="clear_text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/conference_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Conference"
                android:paddingStart="30dp"
                android:inputType="textCapSentences"
                android:paddingTop="10dp"
                android:textColorHint="@color/white"
                android:textSize="14sp">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusTopEnd="@dimen/_18sdp"
            app:boxCornerRadiusBottomStart="@dimen/_18sdp"
            app:boxCornerRadiusTopStart="@dimen/_18sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
            app:endIconMode="clear_text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/state_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="State"
                android:paddingStart="30dp"
                android:inputType="textCapSentences"
                android:paddingTop="10dp"
                android:textColorHint="@color/white"
                android:textSize="14sp">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusTopEnd="@dimen/_18sdp"
            app:boxCornerRadiusBottomStart="@dimen/_18sdp"
            app:boxCornerRadiusTopStart="@dimen/_18sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
            app:endIconMode="clear_text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/union_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Union"
                android:paddingStart="30dp"
                android:inputType="textCapSentences"
                android:paddingTop="10dp"
                android:textColorHint="@color/white"
                android:textSize="14sp">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout><com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:boxCornerRadiusTopEnd="@dimen/_18sdp"
        app:boxCornerRadiusBottomStart="@dimen/_18sdp"
        app:boxCornerRadiusTopStart="@dimen/_18sdp"
        app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
        app:endIconMode="clear_text"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="3dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/country_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Country"
            android:paddingStart="30dp"
            android:inputType="textCapSentences"
            android:paddingTop="10dp"
            android:textColorHint="@color/white"
            android:textSize="14sp">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout><com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:boxCornerRadiusTopEnd="@dimen/_18sdp"
        app:boxCornerRadiusBottomStart="@dimen/_18sdp"
        app:boxCornerRadiusTopStart="@dimen/_18sdp"
        app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
        app:endIconMode="clear_text"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="3dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/division_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Division"
            android:paddingStart="30dp"
            android:inputType="textCapSentences"
            android:paddingTop="10dp"
            android:textColorHint="@color/white"
            android:textSize="14sp">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout><com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:boxCornerRadiusTopEnd="@dimen/_18sdp"
        app:boxCornerRadiusBottomStart="@dimen/_18sdp"
        app:boxCornerRadiusTopStart="@dimen/_18sdp"
        app:boxCornerRadiusBottomEnd="@dimen/_18sdp"
        app:endIconMode="clear_text"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="3dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/world_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="World"
            android:paddingStart="30dp"
            android:inputType="textCapSentences"
            android:paddingTop="10dp"
            android:textColorHint="@color/white"
            android:textSize="14sp">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveTeam"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SAVE"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:background="@drawable/res"
        />
</LinearLayout>