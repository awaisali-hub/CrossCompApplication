<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Participent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">

            <TextView
                android:id="@+id/userNAME"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="My CrossComp Scores"
                android:textSize="20sp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:textColor="@color/actionbar_text_colour"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



        <LinearLayout
            android:visibility="gone"
            android:layout_below="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_layoutMainOne"
            >

            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adrian Cox"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/userScoreDate"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="19sp"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feb 2021"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3">
                <TextView
                    android:id="@+id/userScore"
                    android:textColor="@color/black"
                    android:textSize="85sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="133.0"
                    android:layout_weight="2"
                    android:textAlignment="textEnd"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/200"
                        android:gravity="top"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/scoreStatus"
                    android:background="@drawable/servicenameitems"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Current"
                    android:textAlignment="center"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_16sdp"
                    />
            </LinearLayout>




            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:padding="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="840 meters (A)"
                android:layout_gravity="center"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:padding="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="126 squats (B)"
                android:layout_gravity="center"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:padding="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="63 leg-raises (A)"
                android:layout_gravity="center"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/push_ups"
                android:padding="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31 push-ups (C)"
                android:layout_gravity="center"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>


            <TextView
                android:visibility="gone"
                android:id="@+id/userAgeGender"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:visibility="gone"
                android:id="@+id/userAddress"
                android:paddingStart="30dp"
                android:paddingEnd="50dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="19sp"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <TextView
                android:visibility="gone"
                android:id="@+id/userRemarks"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="38sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLinearForStatus"
        android:layout_below="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_340sdp"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adrian Cox"
            android:textStyle="bold">

        </TextView>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appbar_layout" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/mainLinearForStatus"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/ArrowButtonLayout">

        <ImageView
            android:id="@+id/back_senFragment"
            android:layout_marginEnd="@dimen/_65sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_score"
            android:layout_gravity="start"
            />


        <ImageView
            android:layout_marginStart="@dimen/_65sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward_score"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_30sdp"
            />

    </LinearLayout>



    <com.jjoe64.graphview.GraphView
        android:visibility="gone"
        android:layout_below="@+id/mainLinearForStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/graph" />



    <com.github.mikephil.charting.charts.BarChart
        android:visibility="gone"
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:elevation="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_colour"
                android:layout_marginTop="15dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userScoreExpireDate"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="33sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/linear_layout2"
        android:layout_weight="1.1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:layout_marginEnd="30dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="203dp">
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_alignParentStart="true"
                        app:cardCornerRadius="12dp"
                        android:padding="20dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/score"
                                android:gravity="center"
                                android:onClick="moveToScore"
                                android:text="Sc"
                                android:textColor="@color/white"
                                android:textSize="38sp"
                                android:textStyle="bold">

                            </ImageView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="12dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:text="T"
                                android:onClick="moveToTeams"
                                android:src="@drawable/teamm"

                                android:textColor="@color/white"
                                android:textSize="38sp"
                                android:textStyle="bold">

                            </ImageView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardCornerRadius="12dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:src="@drawable/chal"


                                android:gravity="center"
                                android:onClick="moveToChallenge"
                                android:text="C"
                                android:textColor="@color/white"
                                android:textSize="38sp"
                                android:textStyle="bold">

                            </ImageView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>



                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="103dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardCornerRadius="12dp"
                        android:padding="20dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:gravity="center"
                                android:src="@drawable/services"
                                android:onClick="moveToService"
                                android:text="Sr"
                                android:textColor="@color/white"
                                android:textSize="38sp"
                                android:textStyle="bold">

                            </ImageView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:text="P"
                                android:onClick="moveToProfile"
                                android:src="@drawable/pro"
                                android:textColor="@color/white"
                                android:textSize="38sp"
                                android:textStyle="bold">

                            </ImageView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardCornerRadius="12dp"
                        android:layout_alignParentEnd="true"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/pages"
                                android:onClick="moveToMorePages"
                                android:text="M"
                                android:textColor="@color/white"
                                android:textSize="38sp"
                                android:textStyle="bold">

                            </ImageView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>



                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>




    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_43sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        fab:menu_animationDelayPerItem="50"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/white"
        fab:menu_colorPressed="@color/white"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/crosscompicon2"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingTop="2dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_style="@style/LabelStyle"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_showShadow="true"
        fab:menu_fab_label="Scores"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_icon_floating"
            fab:fab_label="   More   "
            fab:fab_size="normal"
            fab:fab_colorNormal="@color/green"
            fab:fab_colorPressed="@color/green"
            fab:fab_colorRipple="#99FFFFFF"
            android:onClick="moveToMorePages"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/nu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_icon_floating"
            fab:fab_label=" Profile  "
            fab:fab_size="normal"
            fab:fab_colorNormal="@color/green"
            fab:fab_colorPressed="@color/green"
            fab:fab_colorRipple="#99FFFFFF"
            android:onClick="moveToProfile"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/training_icon_floating"
            fab:fab_label=" Training "
            fab:fab_size="normal"
            fab:fab_colorNormal="@color/green"
            fab:fab_colorPressed="@color/green"
            fab:fab_colorRipple="#99FFFFFF"
           />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/em"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_challenge"
            fab:fab_label="Challenges"
            fab:fab_size="normal"
            fab:fab_colorNormal="@color/green"
            fab:fab_colorPressed="@color/green"
            fab:fab_colorRipple="#99FFFFFF"
            android:onClick="moveToChallenge"
           />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/em1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/team_icon_floating"
            fab:fab_label="  Teams   "
            fab:fab_size="normal"
            fab:fab_colorNormal="@color/green"
            fab:fab_colorPressed="@color/green"
            fab:fab_colorRipple="#99FFFFFF"
            android:onClick="moveToTeams"
          />

    </com.github.clans.fab.FloatingActionMenu>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ArrowButtonLayout"
        android:layout_gravity="bottom">
        <androidx.appcompat.widget.AppCompatButton
            android:text="Make a Reservation\n for your next CrossComps"
            android:padding="@dimen/_8sdp"
            android:ems="10"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:layout_gravity="bottom"
            android:id="@+id/reservationButton"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"

            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:background="@drawable/res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatButton>


    </LinearLayout>

</RelativeLayout>
