<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trainings.TrainingMainPageActivity">



    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">

            <TextView
                android:id="@+id/userNAME"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_marginEnd="15dp"
                android:text="My CrossComp Training"
                android:gravity="center"
                android:textColor="@color/actionbar_text_colour"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_below="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:text="General Training Recommendations"
            android:padding="@dimen/_8sdp"
            android:elevation="@dimen/_20sdp"
            android:ems="10"
            android:textSize="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:background="@drawable/res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:onClick="MoveToRecommendationsTraining"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:text="Personalized Training Program"
            android:padding="@dimen/_8sdp"
            android:elevation="@dimen/_20sdp"
            android:ems="10"
            android:textSize="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:background="@drawable/res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:onClick="MoveToPersonalizedTraining"
           />

        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:text="Individual Challenges"
            android:padding="@dimen/_8sdp"
            android:elevation="@dimen/_20sdp"
            android:ems="10"
            android:textSize="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:background="@drawable/res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
           />

    </LinearLayout>
</RelativeLayout>