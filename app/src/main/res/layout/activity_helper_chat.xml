<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trainings.HelperChatActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="bottom"
    >
    <include
        android:id="@+id/chatToolbar"
        layout="@layout/chat_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="3dp"
        android:layout_weight="3"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:stackFromBottom="true"
            android:id="@+id/show_message_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_Text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/input_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10dp"
            android:hint="Enter text message here."
            android:textColorHint="#D3CFCF"
            android:inputType="textCapSentences"
            android:maxLines="4"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:background="@drawable/custom_input"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_send_message"
            android:backgroundTint="@color/blue"
            app:tint="@null"
            android:onClick="sendMessage"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:gravity="center"
        android:layout_below="@+id/team3"
        android:background="@drawable/res"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/blue"
        android:text="My Personalized\n Training Program"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="MoveToMyTrainingProgram5"
        />
</LinearLayout>