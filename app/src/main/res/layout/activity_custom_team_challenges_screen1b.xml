<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Challenges.CustomTeamChallengesScreen1bActivity">



    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">

            <TextView
                android:id="@+id/userNAME"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="My CrossComp Challenges\n Team - Custom"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:textColor="@color/actionbar_text_colour"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My State Team Challenge"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scores"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3.5"
            >
            <LinearLayout
                android:layout_weight="2.5"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Males / 41.0 - 43.0"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat"
                    android:layout_marginLeft="@dimen/_53sdp"/>
            </LinearLayout>

            <ImageButton
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/res"
                android:layout_width="@dimen/_33sdp"
                android:layout_height="@dimen/_33sdp"
                android:src="@drawable/edit_icon_pen"
                android:onClick="MoveToCustomizeGenderAgeRange"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/challengeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="January 2021"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_below="@+id/challengeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Florida"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_30sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="(84)"
                    android:textSize="25sp"
                    android:layout_marginStart="@dimen/_5sdp"/>
            </LinearLayout>



            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:text="102.5"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_20sdp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/challengeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Texas"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_30sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="(12)"
                    android:textSize="25sp"
                    android:layout_marginStart="@dimen/_5sdp"/>
            </LinearLayout>




            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:text="94.7"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="@dimen/_20sdp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/challengeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="California"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_30sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="(47)"
                    android:textSize="25sp"
                    android:layout_marginStart="@dimen/_5sdp"/>
            </LinearLayout>


            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="93.8"
                android:textAlignment="textEnd"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_20sdp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/challengeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="New York"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_30sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="(36)"
                    android:textSize="25sp"
                    android:layout_marginStart="@dimen/_5sdp"/>
            </LinearLayout>


            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="87.6"
                android:textAlignment="textEnd"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_20sdp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/challengeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

             <LinearLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/black"
                     android:text="Arizona"
                     android:textSize="25sp"
                     android:textStyle="bold"
                     android:layout_marginStart="@dimen/_30sdp"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/black"
                     android:text="(29)"
                     android:textSize="25sp"
                     android:layout_marginStart="@dimen/_5sdp"/>
             </LinearLayout>




            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="84.9"
                android:textAlignment="textEnd"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_20sdp"
                />
        </LinearLayout>





        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ArrowButtonLayout"
            android:background="@color/blue">

            <ImageView
                android:id="@+id/back_senFragment"
                android:padding="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back_score"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_10sdp"
                />


            <ImageView
                android:visibility="gone"
                android:padding="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward_score"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/_90sdp"

                />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_below="@+id/team3"
            android:background="@drawable/res"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:text="My CrossComp Challenges"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

    </LinearLayout>



</RelativeLayout>