<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>


            <ImageButton
                android:layout_gravity="right"
                android:layout_marginEnd="50dp"
                android:background="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/update_profile_images"
                android:onClick="UpdateProfile"/>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_below="@id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingStart="@dimen/_10sdp"
                            android:text="First Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/first_Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/butten"
                            android:gravity="top"
                            android:text="Adrian"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="28sp"
                            android:padding="5dp">
                        </EditText>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingStart="@dimen/_10sdp"
                            android:text="Last Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>

                        <EditText
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/last_Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/butten"
                            android:gravity="top"
                            android:text="Cox"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="28sp"
                            android:padding="5dp">
                        </EditText>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingStart="@dimen/_10sdp"
                            android:text="Phone Number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>

                        <EditText
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/butten"
                            android:gravity="top"
                            android:textColor="@color/black"
                            android:text="222-333-4444"
                            android:maxLines="1"
                            android:textSize="28sp"
                            android:padding="5dp">
                        </EditText>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingStart="@dimen/_10sdp"
                            android:text="Email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>

                        <EditText
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/butten"
                            android:gravity="top"
                            android:maxLines="1"
                            android:text="adrian564@gmail.com"
                            android:textColor="@color/black"
                            android:textSize="28sp"
                            android:padding="5dp">
                        </EditText>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingStart="@dimen/_10sdp"
                            android:text="Postal Code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/postal_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/butten"
                            android:gravity="top"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:text="54326"
                            android:textSize="28sp"
                            android:padding="5dp">
                        </EditText>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingStart="@dimen/_10sdp"
                            android:text="Address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <EditText
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/butten"
                            android:gravity="top"
                            android:textColor="@color/black"
                            android:text="London"
                            android:maxLines="1"
                            android:textSize="28sp"
                            android:padding="5dp">
                        </EditText>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingStart="@dimen/_10sdp"
                            android:text="Gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <EditText
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/butten"
                            android:gravity="top"
                            android:text="Male"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="28sp"
                            android:padding="5dp">
                        </EditText>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingStart="@dimen/_10sdp"
                            android:text="Age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <EditText
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/butten"
                            android:gravity="top"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:text="28"
                            android:textSize="28sp"
                            android:padding="5dp">
                        </EditText>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_75sdp">
                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:paddingStart="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/promoter"
                            android:visibility="gone"
                            android:paddingStart="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/black"
                            android:textSize="28sp">
                        </TextView>
                        <TextView
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Become a CrossComp Affiliate."
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="25dp"
            android:background="@color/blue"
            android:backgroundTint="@color/green"
            android:contentDescription="Home"
            android:onClick="ToHome"
            android:src="@drawable/home_ic"
            app:tint="@null" />
    </RelativeLayout>

</RelativeLayout>